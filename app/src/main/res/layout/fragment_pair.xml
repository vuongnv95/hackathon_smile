<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtImei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_information"
            android:hint="Nháº­p imei"
            android:paddingHorizontal="@dimen/padding_13"
            android:paddingVertical="8dp"
            android:textColor="#EC0D3A"
            app:layout_constraintBottom_toTopOf="@+id/btnPair"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivProgressBar"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintWidth_percent="0.9" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPair"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_item_18"
            android:background="@drawable/bg_button"
            android:text="Pair"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="182:40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintWidth_percent="0.5" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivProgressBar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/bg_progress_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_device"
            app:layout_constraintBottom_toBottomOf="@+id/ivProgressBar"
            app:layout_constraintLeft_toLeftOf="@id/ivProgressBar"
            app:layout_constraintRight_toRightOf="@id/ivProgressBar"
            app:layout_constraintTop_toTopOf="@+id/ivProgressBar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>